{
  "name": "savitri-backend",
  "version": "1.0.0",
  "description": "Backend for Savitri Psychology Therapy App",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "start:test": "NODE_ENV=test node dist/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "artillery run tests/load/api-load-test.yml",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run typecheck && npm run test",
    "migrate": "ts-node src/migrations/run.ts",
    "seed": "ts-node src/seeds/run.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "crypto": "^1.0.1",
    "axios": "^1.6.0",
    "@google/generative-ai": "^0.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/bcrypt": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/cors": "^2.8.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "@shelf/jest-mongodb": "^5.2.2",
    "mongodb-memory-server": "^9.0.1",
    "artillery": "^2.0.0",
    "nyc": "^15.1.0"
  }
}
